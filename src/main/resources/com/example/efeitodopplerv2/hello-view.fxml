<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="348.0" prefWidth="384.0" spacing="20.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.efeitodopplerv2.HelloController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <Label text="Login"/>
    <TextField fx:id="txtFieldUsuario" promptText="Digite seu usuário"/>
    <Label text="Senha"/>
    <TextField fx:id="txtFieldSenha" promptText="Digite sua senha"/>
    <Label fx:id="errorLabel" text="" styleClass="error-label"/>
    <Button text="Entrar" onAction="#onEntrarButtonClick"/>
    <Button text="Ainda não sou cadastrado" onAction="#OnAindaNaoSouCadastradoClick"/>
    <Button text="Esqueci minha senha" onAction="#onEsqueciMinhaSenhaClick"/>
</VBox>
